<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/surface"
    android:padding="16dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/TV_Restaurantes"
        android:layout_width="349dp"
        android:layout_height="121dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:paddingTop="12dp"
        android:text="Restaurantes Cercanos"
        android:textColor="@color/onSurfaceVariant"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/MVRestaurantes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/MVRestaurantes"
        android:layout_width="298dp"
        android:layout_height="316dp"
        android:layout_marginBottom="121dp"
        app:layout_constraintBottom_toTopOf="@+id/TV_InfoRest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/TV_InfoRest"
        android:layout_width="255dp"
        android:layout_height="53dp"
        android:layout_marginBottom="47dp"
        android:gravity="center"
        android:text="Restaurantes Cercanos Recomendados"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
