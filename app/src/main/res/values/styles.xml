<resources>

    <!-- BOTONES -->
    <style name="WidgetAppButtonFilled" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="rippleColor">@color/ripple_primary</item>
    </style>

    <style name="WidgetAppButtonOutlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">16dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/ripple_primary</item>
    </style>

    <style name="WidgetAppButtonText" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="rippleColor">@color/ripple_primary</item>
    </style>

    <!-- TEXT INPUT -->
    <style name="WidgetAppTextInputOutlined" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="endIconTint">?attr/colorPrimary</item>
    </style>

    <!-- CARDS -->
    <style name="WidgetAppCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeColor">@color/outline</item>
        <item name="strokeWidth">0.6dp</item>
    </style>

    <!-- Formas reutilizables (para ShapeableImageView, mapas, etc.) -->
    <style name="ShapeCornerFull">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeCornerLarge">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>



</resources>

