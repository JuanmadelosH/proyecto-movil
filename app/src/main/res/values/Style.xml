<resources>

    <!-- Tipografías -->
    <style name="Aurora.Text.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@string/font_family_display</item>
    </style>
    <style name="Aurora.Text.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@string/font_family_body</item>
    </style>
    <style name="Aurora.Text.Label" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@string/font_family_body</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- Botón Primario (gradiente morado→cian) -->
    <style name="Aurora.Button.Filled" parent="Widget.Material3.Button">
        <item name="backgroundTint">@null</item>
        <item name="background">@drawable/bg_button_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">@dimen/au_radius_md</item>
        <item name="rippleColor">@color/au_secondary_200</item>
        <item name="elevation">6dp</item>
    </style>

    <!-- Botón Outlined -->
    <style name="Aurora.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">?attr/colorOutline</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">@dimen/au_radius_md</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- FAB -->
    <style name="Aurora.FAB" parent="Widget.Material3.FloatingActionButton">
        <item name="backgroundTint">@null</item>
        <item name="android:srcTint">@android:color/white</item>
        <item name="shapeAppearance">@style/Shape.Rounded.FAB</item>
        <item name="android:foreground">@drawable/ripple_primary</item>
        <item name="android:background">@drawable/bg_fab_gradient</item>
    </style>

    <!-- Tarjetas -->
    <style name="Aurora.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/au_radius_md</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardForegroundColor">?attr/colorOnSurface</item>
        <item name="strokeColor">?attr/colorOutline</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:stateListAnimator">@animator/card_elevation</item>
    </style>

    <!-- Bottom Navigation -->
    <style name="Aurora.BottomNav" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconSize">24dp</item>
        <item name="itemTextAppearanceActive">@style/Aurora.Text.Label</item>
        <item name="itemTextAppearanceInactive">@style/Aurora.Text.Label</item>
        <item name="itemRippleColor">@color/au_secondary_200</item>
        <item name="itemActiveIndicatorStyle">@style/Aurora.BottomNav.Indicator</item>
    </style>

    <style name="Aurora.BottomNav.Indicator" parent="">
        <item name="android:height">32dp</item>
        <item name="android:width">64dp</item>
        <item name="android:insetLeft">8dp</item>
        <item name="android:insetRight">8dp</item>
        <item name="android:insetTop">8dp</item>
        <item name="android:insetBottom">8dp</item>
        <item name="android:drawable">@drawable/bg_indicator_pill</item>
    </style>

    <!-- TextInput -->
    <style name="Aurora.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorOutline</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/au_radius_sm</item>
        <item name="boxCornerRadiusTopEnd">@dimen/au_radius_sm</item>
        <item name="boxCornerRadiusBottomStart">@dimen/au_radius_sm</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/au_radius_sm</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="shapeAppearance">@style/Shape.Rounded.MD</item>
    </style>

    <!-- Shapes -->
    <style name="Shape.Rounded.MD" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/au_radius_md</item>
    </style>
    <style name="Shape.Rounded.FAB" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/au_radius_lg</item>
    </style>

</resources>
